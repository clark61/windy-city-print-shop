<% if (allrecs.length > 0) {%>
    <table class="db-table">
            <tr>
                <th>ID</th>
                <th>User ID</th>
                <th>Product ID</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Public</th>
                <th colspan="3">Actions</th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.id %></td>
                <td><%= recref.user_id %></td>
                <td><%= recref.product_id %></td>
                <td><%= recref.rating %></td>
                <td><%= recref.comment %></td>
                <td><%= recref.review_date.toISOString().split('T')[0] %></td>
                <td><%= recref.public %></td>
                <td><a href='/review/<%= recref.id %>/show'>Details</a></td>
                <td><a href='/review/<%= recref.id %>/edit'>Edit</a></td>
                <td><a href='/review/<%= recref.id %>/delete'onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
        <% }); %>
    </table>
<% } else { %>
    <p>Not Records Available</p>
<% } %>
<p> <a class="default-button" href='/review/addrecord'>Add</a> </p>
