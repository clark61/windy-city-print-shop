<% if (allrecs.length > 0) {%>
    <table class="db-table">
            <tr>
                <th>Promotion ID</th>
                <th>Percent Off</th>
                <th>Description</th>
                <th colspan="3">Actions</th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.id %></td>
                <td><%= recref.percent_off %></td>
                <td><%= recref.description %></td>
                <td><a href='/promotion/<%= recref.id %>/show'>Details</a></td>
                <td><a href='/promotion/<%= recref.id %>/edit'>Edit</a></td>
                <td><a href='/promotion/<%= recref.id %>/delete'onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
        <% }); %>
    </table>
<% } else { %>
    <p>Not Records Available</p>
<% } %>
<p> <a class="db-table-add" href='/promotion/addrecord'>Add</a> </p>
