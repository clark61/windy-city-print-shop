<% if (allrecs.length > 0) {%>
    <table class="db-table">
            <tr>
                <th>Order ID</th>
                <th>Invoice ID</th>
                <th>Product ID</th>
                <th>Promotion ID</th>
                <th>Quantity</th>
                <th>Total</th>
                <th colspan="3">Actions</th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.id %></td>
                <td><%= recref.invoice_id %></td>
                <td><%= recref.product_id %></td>
                <td><%= recref.promotion_id %></td>
                <td><%= recref.quantity %></td>
                <td><%= Intl.NumberFormat('en-US', {style: 'currency', currency: 'USD'}).format(recref.total) %></td>
                <td><a href='/order/<%= recref.id %>/show'>Details</a></td>
                <td><a href='/order/<%= recref.id %>/edit'>Edit</a></td>
                <td><a href='/order/<%= recref.id %>/delete'onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
        <% }); %>
    </table>
<% } else { %>
    <p>Not Records Available</p>
<% } %>
<p> <a class="db-table-add" href='/order/addrecord'>Add</a> </p>
