<% if (allrecs.length > 0) {%>
    <table class="db-table">
            <tr>
                <th>Invoice ID</th>
                <th>User ID</th>
                <th>Invoice Date</th>
                <th colspan="3">Actions</th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.id %></td>
                <td><%= recref.user_id %></td>
                <td><%= recref.invoice_date.toISOString().split('T')[0] %></td>
                <td><a href='/invoice/<%= recref.id %>/show'>Details</a></td>
                <td><a href='/invoice/<%= recref.id %>/edit'>Edit</a></td>
                <td><a href='/invoice/<%= recref.id %>/delete'onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
        <% }); %>
    </table>
<% } else { %>
    <p>Not Records Available</p>
<% } %>
<p> <a class="db-table-add" href='/invoice/addrecord'>Add</a> </p>
